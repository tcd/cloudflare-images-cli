{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@lib":         [ "./src/lib/index.ts" ],
            "@lib/helpers": [ "./src/lib/helpers/index.ts" ],
        },
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
        ],
    },
    "include": [
        "src",
    ],
    "exclude": [
        "bin/**/*",
    ]
}
