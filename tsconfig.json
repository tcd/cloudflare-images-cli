{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@lib": [
                "./src/lib/index.ts"
            ],
        },
        "types": [
            "node"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "bin/**/*",
    ]
}
